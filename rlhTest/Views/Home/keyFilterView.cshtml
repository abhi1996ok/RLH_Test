@model rlhTest.Models.HelperModel.Filters

<div class="mt-3" style="padding-left: 15px; padding-right: 15px">

    @using (Html.BeginForm("FiltersApplyKey", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {<h6>Type Of Destination</h6>

        <div class="custom-control custom-checkbox ">
            @Html.CheckBoxFor(model => model.combo)
            <lable>Combo Country</lable>
            <br />
            @Html.CheckBoxFor(model => model.single)
            <lable>Single Country</lable>
            @Html.HiddenFor(model => model.word, new { value = ViewBag.data})
