        </div>

        <h6>Price (INR)</h6>


        <!--<input type="range" class="custom-range" id="customRange" name="points1" min="50000"max="500000">-->

        <div class="custom-control custom-checkbox ">
            <!--<input type="checkbox" class="custom-control-input" id="customprice" name="price1">-->
            @Html.CheckBoxFor(model => model.price1)
            <label>Upto 50000</label>
            <br>
            <!--<input type="checkbox" class="custom-control-input " id="customprice1" name="price2">-->
            @Html.CheckBoxFor(model => model.price2)
            <label>50000-100000</label>
            <br>
            <!--<input type="checkbox" class="custom-control-input " id="customprice2" name="price3">-->
            @Html.CheckBoxFor(model => model.price3)
            <label>100000-300000</label>
            <br>
            <!--<input type="checkbox" class="custom-control-input " id="customprice3" name="price4">-->
            @Html.CheckBoxFor(model => model.price4)
            <label>300000-500000</label>
        </div>
        <input type="submit" value="Submit" />
    }
</div>


